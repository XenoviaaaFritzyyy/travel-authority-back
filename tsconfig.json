{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",             // Define the root directory for your source files
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {                      // Optional but helpful for aliasing paths
      "@controllers/*": ["src/controllers/*"],
      "@entities/*": ["src/entities/*"],
      "@services/*": ["src/services/*"],
      "@models/*": ["src/models/*"],
      "@modules/*": ["src/modules/*"],
      "@enums/*": ["src/enums/*"]
    }
  },
  "include": ["src/**/*"],          // Include all TypeScript files in the `src` folder
  "exclude": ["node_modules", "dist"] // Exclude generated and dependency files
}
